@model ExpendituresCalculator.Models.Spent

@{
    ViewData["Title"] = "SpentDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <form asp-action="View">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-element-group">
            <label asp-for="SpentId" class="control-label"></label>
            <input asp-for="SpentId" class="form-control" />
            <span asp-validation-for="SpentId" class="text-danger"></span>
        </div>
        <div class="form-element-group">
            <label asp-for="Amount" class="control-label"></label>
            <input asp-for="Amount" class="form-control" />
            <span asp-validation-for="Amount" class="text-danger"></span>
        </div>
        <div class="form-element-group">
            <label asp-for="Name" class="control-label"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-element-group">
            <label asp-for="DateTime" class="control-label"></label>
            <input asp-for="DateTime" class="form-control" />
            <span asp-validation-for="DateTime" class="text-danger"></span>
        </div>
        <div class="form-element-group">
            <input type="submit" value="Create" class="btn btn-primary" />
        </div>
    </form>
</div>
